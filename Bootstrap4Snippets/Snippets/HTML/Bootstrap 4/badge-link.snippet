<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
	xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Badge Link</Title>
      <Author>Johan Visagie</Author>
      <Description>A small count and labeling component that a user can click.</Description>
      <Shortcut>b4-badge-link</Shortcut>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>href</ID>
          <ToolTip>Url of the link</ToolTip>
          <Default><![CDATA[#]]></Default>
        </Literal>
        <Literal>
          <ID>content</ID>
          <ToolTip>The content for the badge</ToolTip>
          <Default><![CDATA[New]]></Default>
        </Literal>
      </Declarations>
      <Code Language="HTML">
        <![CDATA[<a href="$href$" class="badge badge-primary">$content$</a>$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>