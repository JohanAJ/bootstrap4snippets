<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>Button Input</Title>
      <Author>Johan Visagie</Author>
      <Description>An input Bootstrap button.</Description>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Shortcut>b4-button-input</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>content</ID>
          <ToolTip>Content of the button</ToolTip>
          <Default><![CDATA[Primary]]></Default>
        </Literal>
      </Declarations>
      <Code Language="HTML">
        <![CDATA[<input class="btn btn-primary" type="button" value="$content$">$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>